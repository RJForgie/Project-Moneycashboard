<h1>All transactions</h1>

<% for transaction in @transactions %>

<p>Value: <%= transaction.value%></p>
<p>Merchant: <%= transaction.which_merchant.name%></p>
<p>Date: <%= transaction.transaction_date %></p>
<p>Tag: <%= transaction.which_tag.name %></p>

<form action="/transactions/<%= transaction.id %>/edit" method="get">
  <input type="submit" class="button" value="Edit Transaction"/>
</form>

<form action="/transactions/<%= transaction.id %>/delete" method="POST">
  <input type="submit" class="button" value="Remove transaction"/>
</form>

<hr/>
<% end %>

<% for tag in @tags%>
<p><%= tag.name %> : <%= tag.transaction_total %> </p>
<hr/>
<% end %>

<% for merchant in @merchants%>
<p><%= merchant.name %> : <%= merchant.transaction_total %> </p>
<hr/>
<% end %>


<p>January: <%=@january %></p>
<p>February: <%=@february %></p>
<p>March: <%=@march %></p>
<p>April: <%=@april%></p>
<p>May: <%=@may %></p>
<p>June: <%=@june %></p>
<p>July: <%=@july %></p>
<p>August: <%=@august %></p>
<p>September: <%=@september %></p>
<p>October: <%=@october %></p>
<p>November: <%=@november %></p>
<p>December: <%=@december %></p>



<p>Total: <%= @total %></p>

<p>Budget: <%= @accountsettings.budget_limit %> </p>

<% if @accountsettings.budget_limit < @total %>
<p>Warning! Budget exceeded.</p>
<% end %>
